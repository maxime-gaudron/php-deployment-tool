{% extends 'QaSystemCoreBundle::base.html.twig' %}

{% block content %}
    <h1>Project edit</h1>

<form action="{{ path('jira_project_update', { 'id': document.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('jira_project') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('jira_project_delete', { 'id': document.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
