{% extends 'MopaBootstrapBundle::base_less.html.twig' %}

{% block head_script %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock head_script %}

{% block head_style %}
    {% stylesheets filter='less,cssrewrite,?yui_css' output='compiled/css/main.css'
      '@QaSystemCoreBundle/Resources/less/custom.less'
      'bundles/qasystemcore/css/chosen/chosen.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock head_style %}

{% block foot_script_assetic %}
    {% javascripts filter='?yui_js' output='compiled/js/core.js'
    '@QaSystemCoreBundle/Resources/public/js/jquery-1.9.1.js'
    '@QaSystemCoreBundle/Resources/public/js/moment.js'
    '@QaSystemCoreBundle/Resources/public/js/chosen.jquery.js'
    '@QaSystemCoreBundle/Resources/public/js/common.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/tooltip.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/*.js'
    '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-collection.js'
    '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-subnav.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock foot_script_assetic %}

{% block title %}Php deployment tool{% endblock %}
{% block headline %}{% endblock %}

{% block page_header %}
{% endblock page_header %}

{% block navbar %}
    {% embed '@MopaBootstrap/Navbar/navbar.html.twig' with { fixedTop: true, staticTop: false, inverse: true } %}
        {% block brand %}
            <a class="navbar-brand" href="{{ path('homepage', { status: 'deployed' }) }}" data-bypass="1">Php deployment tool</a>
        {% endblock %}

        {% block menu %}
            {{ mopa_bootstrap_menu('QaSystemCoreBundle:Builder:mainMenu') }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content_sidebar %}
{% endblock %}

{% block footer %}
{% endblock %}
